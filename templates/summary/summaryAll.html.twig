{% extends 'base.html.twig' %}

{% block title %} Celkový náhled za posledních 24h {% endblock %}
{% block h1%} Celkový náhled za posledních 24h {% endblock %}
{% block body %}
    {% if items %}        
    <div class="container">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Datum a čas prodeje</th>
                    <th>Položka</th>
                    <th>Cena</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.drinkOrder.date|date('j.n.Y G:i') }}</td>
                    <td>{{ item.product.name }} Kč</td>
                    <td>{{ item.price }} Kč</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ include('paginator/pager.html.twig', {'links': links}) }}    
    </div>
    {% endif %}        
{% endblock %}

